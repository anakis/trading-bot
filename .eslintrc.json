{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": ["error", "never"],
    "no-underscore-dangle": "off",
    "no-constant-condition": "off",
    "no-await-in-loop": "off",
    "new-cap": ["error", { "newIsCapExceptionPattern": "^ccxt" }],
    "arrow-parens": ["error", "as-needed"],
    "no-console":"off"
  }
}
